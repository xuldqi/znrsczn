      },
      "id": "get-pending-articles",
      "name": "获取待发布文章",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [460, 300],
      "credentials": {
        "httpHeaderAuth": {
          "id": "1",
          "name": "API认证"
        }
      }
    },
    {
      "parameters": {
        "conditions": {
          "number": {
            "value1": "={{ $json.articles.length }}",
            "operation": "larger",
            "value2": 0
          }
        }
      },
      "id": "check-articles-exist",
      "name": "检查是否有文章",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [680, 300]
    },
    {
      "parameters": {
        "jsCode": "// 选择要发布的文章（随机选择一篇）\nconst articles = items[0].json.articles;\nif (articles.length === 0) {\n  return [];\n}\n\nconst randomIndex = Math.floor(Math.random() * articles.length);\nconst selectedArticle = articles[randomIndex];\n\n// 为不同平台格式化内容\nconst platforms = {\n  weibo: {\n    name: 'weibo',\n    content: `${selectedArticle.title}\\n\\n${selectedArticle.content.substring(0, 100)}...\\n\\n阅读全文：https://bambumoon.cn/${selectedArticle.category}\\n\\n#中年自救 #${selectedArticle.category === 'career' ? '职场发展' : selectedArticle.category === 'finance' ? '理财规划' : '生活指南'}`,\n    maxLength: 140\n  },\n  twitter: {\n    name: 'twitter',\n    content: `${selectedArticle.title}\\n\\n${selectedArticle.content.substring(0, 200)}...\\n\\n#MiddleAge #SelfImprovement\\n\\nhttps://bambumoon.cn/${selectedArticle.category}`,\n    maxLength: 280\n  },\n  xiaohongshu: {\n    name: 'xiaohongshu',\n    content: `${selectedArticle.title}\\n\\n${selectedArticle.content.substring(0, 800)}\\n\\n#中年人生活 #实用指南 #${selectedArticle.category}`,\n    maxLength: 1000\n  },\n  wechat: {\n    name: 'wechat',\n    content: selectedArticle.content,\n    title: selectedArticle.title,\n    summary: selectedArticle.content.substring(0, 150) + '...',\n    maxLength: 20000\n  }\n};\n\nreturn Object.values(platforms).map(platform => ({\n  json: {\n    ...selectedArticle,\n    platform: platform.name,\n    formattedContent: platform.content,\n    platformTitle: platform.title || selectedArticle.title,\n    platformSummary: platform.summary || selectedArticle.content.substring(0, 100)\n  }\n}));"
      },
      "id": "format-for-platforms",
      "name": "格式化多平台内容",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [900, 300]
    },
    {
      "parameters": {
        "conditions": {
          "string": {
            "value1": "={{ $json.platform }}",
            "operation": "equal",
            "value2": "weibo"
          }
        }
      },
      "id": "route-weibo",
      "name": "微博路由",
