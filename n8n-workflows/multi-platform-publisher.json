      "id": "update-publish-status",
      "name": "更新发布状态",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [1560, 350],
      "credentials": {
        "httpHeaderAuth": {
          "id": "1",
          "name": "API认证"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "// 汇总发布结果\nconst results = items.map(item => ({\n  platform: item.json.platform || 'unknown',\n  success: item.json.id ? true : false,\n  articleId: item.json.id,\n  response: item.json\n}));\n\nconst summary = {\n  totalAttempts: results.length,\n  successful: results.filter(r => r.success).length,\n  failed: results.filter(r => !r.success).length,\n  platforms: results.map(r => r.platform),\n  timestamp: new Date().toISOString()\n};\n\nreturn [{ json: summary }];"
      },
      "id": "summarize-results",
      "name": "汇总发布结果",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [1780, 350]
    }
