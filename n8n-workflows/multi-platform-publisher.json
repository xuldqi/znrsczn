      },
      "id": "publish-to-xiaohongshu",
      "name": "发布到小红书",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [1340, 400]
    },
    {
      "parameters": {
        "url": "https://api.weixin.qq.com/cgi-bin/draft/add",
        "sendQuery": true,
        "queryParameters": {
          "parameters": [
            {
              "name": "access_token",
              "value": "YOUR_WECHAT_ACCESS_TOKEN"
            }
          ]
        },
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"articles\": [{\n    \"title\": \"{{ $json.platformTitle }}\",\n    \"author\": \"中年自救指南\",\n    \"digest\": \"{{ $json.platformSummary }}\",\n    \"content\": \"{{ $json.formattedContent }}\",\n    \"content_source_url\": \"https://bambumoon.cn/{{ $json.category }}\",\n    \"need_open_comment\": 1,\n    \"only_fans_can_comment\": 0\n  }]\n}"
      },
