        "specifyBody": "json",
        "jsonBody": "={\n  \"publishStatus\": \"published\",\n  \"platform\": \"{{ $json.platform }}\",\n  \"publishedAt\": \"{{ DateTime.now().toISO() }}\"\n}",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth"
